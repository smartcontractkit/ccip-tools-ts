{
  "name": "@chainlink/ccip-tools-ts",
  "version": "0.2.12",
  "description": "CLI and library to interact with CCIP",
  "author": "Chainlink devs",
  "license": "MIT",
  "repository": "git://github.com/smartcontractkit/ccip-tools-ts.git",
  "type": "module",
  "main": "dist/lib/index.js",
  "module": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "bin": "dist/ccip-tools-ts",
  "exports": {
    ".": "./dist/lib/index.js",
    "./src/*": "./src/*"
  },
  "scripts": {
    "test": "jest",
    "lint": "prettier --check ./src && eslint ./src",
    "lint:fix": "prettier --write ./src && eslint --fix ./src",
    "typecheck": "tsc --noEmit",
    "generate": "node ./generate.cjs `grep -lrn '^\\s*//\\s*generate\\b' ./src/*`",
    "build": "npm run clean && npm run generate && tsc -p ./tsconfig.build.json && npm run make-script",
    "make-script": "sed -e '1s|#!/.*|#!/usr/bin/env node|' ./dist/index.js > ./dist/ccip-tools-ts && chmod +x ./dist/ccip-tools-ts && rm -v ./dist/index.js",
    "start": "tsx ./src/index.ts",
    "clean": "rm -rfv ./dist ./coverage",
    "prepare": "npm run build"
  },
  "files": [
    "dist",
    "src",
    "!src/**/*.test.*",
    "!src/**/__tests__",
    "!src/**/__mocks__"
  ],
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@types/bn.js": "^5.2.0",
    "@types/jest": "30.0.0",
    "@types/node": "24.10.1",
    "@types/yargs": "17.0.35",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.4",
    "ethers-abitype": "1.0.3",
    "glob": "12.0.0",
    "jest": "30.2.0",
    "prettier": "3.6.2",
    "ts-jest": "29.4.5",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.47.0"
  },
  "dependencies": {
    "@aptos-labs/ts-sdk": "^5.1.4",
    "@coral-xyz/anchor": "^0.29.0",
    "@ethers-ext/signer-ledger": "^6.0.0-beta.1",
    "@inquirer/prompts": "8.0.1",
    "@ledgerhq/hw-app-aptos": "^6.34.9",
    "@ledgerhq/hw-app-solana": "^7.6.0",
    "@ledgerhq/hw-transport-node-hid": "^6.29.14",
    "@mysten/bcs": "^1.9.2",
    "@mysten/sui": "^1.45.0",
    "@solana/spl-token": "0.4.14",
    "@solana/web3.js": "^1.98.4",
    "abitype": "1.1.2",
    "bn.js": "^5.2.2",
    "borsh": "^2.0.0",
    "bs58": "^6.0.0",
    "buffer-layout": "^1.2.2",
    "ethers": "6.15.0",
    "moize": "^6.1.6",
    "ts-node": "^10.9.2",
    "tslib": "2.8.1",
    "yaml": "2.8.1",
    "yargs": "18.0.0"
  },
  "overrides": {
    "axios": "^1.13.2"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 100
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts-esm",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "moduleNameMapper": {
      "^@solana/web3\\.js$": "@solana/web3.js",
      "^bn\\.js$": "bn.js"
    },
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.test.json"
        }
      ]
    },
    "collectCoverage": true
  }
}
