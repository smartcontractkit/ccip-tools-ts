{
  "name": "@chainlink/ccip-tools-ts",
  "version": "0.90.0",
  "description": "SDK/Library to interact with CCIP",
  "author": "Chainlink devs",
  "license": "MIT",
  "repository": "git://github.com/smartcontractkit/ccip-tools-ts.git",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./src/*": "./src/*"
  },
  "scripts": {
    "test": "node --test",
    "lint": "prettier --check ./src && eslint ./src",
    "lint:fix": "prettier --write ./src && eslint --fix ./src",
    "typecheck": "tsc --noEmit",
    "check": "npm run lint && npm run typecheck",
    "build": "npm run clean && tsc -p ./tsconfig.build.json",
    "clean": "rm -rfv ./dist",
    "prepare": "npm run build"
  },
  "files": [
    "dist",
    "src",
    "tsconfig.json",
    "!**/*.test.*",
    "!**/__tests__",
    "!**/__mocks__"
  ],
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@types/bn.js": "^5.2.0",
    "@types/node": "24.10.1",
    "@types/yargs": "17.0.35",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.4",
    "ethers-abitype": "1.0.3",
    "prettier": "3.6.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.47.0"
  },
  "dependencies": {
    "@aptos-labs/ts-sdk": "^5.1.4",
    "@coral-xyz/anchor": "^0.29.0",
    "@mysten/bcs": "^1.9.2",
    "@mysten/sui": "^1.45.0",
    "@solana/spl-token": "0.4.14",
    "@solana/web3.js": "^1.98.4",
    "abitype": "1.1.2",
    "bn.js": "^5.2.2",
    "borsh": "^2.0.0",
    "bs58": "^6.0.0",
    "ethers": "6.15.0",
    "moize": "^6.1.6",
    "yaml": "2.8.1"
  },
  "overrides": {
    "axios": "^1.13.2"
  }
}
